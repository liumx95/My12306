<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/tvTicketResultStep1TrainNo"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="G1080"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgTicketResultStep1Flg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flg_guo" />

        <ImageView
            android:id="@+id/imgTicketResultStep1Flg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:src="@drawable/flg_zhong" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvTicketResultStep1TimeFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:00"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvTicketResultStep1TimeTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:30(0日)"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tvTicketResultStep1Seat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="高级软卧:200"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvTicketResultStep1Seat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软卧:200"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvTicketResultStep1Seat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="硬座:200"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvTicketResultStep1Seat4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="软卧:200"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/forward_25" />

</LinearLayout>