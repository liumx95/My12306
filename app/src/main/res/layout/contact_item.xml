<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/item_horizontal_margin"
    android:paddingTop="@dimen/item_horizontal_margin"
    android:orientation="horizontal" >

    <TextView
        android:textColor="#000"
        android:id="@+id/tvMyContactEditKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="证件类型"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:textColor="#222"
        android:id="@+id/tvMyContactEditValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="110110199901010001"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imgMyContactEditFlg"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:src="@drawable/forward_25" />

</LinearLayout>

