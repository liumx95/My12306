<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/tvTicket_before"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:gravity="center"
            android:text="前一天"
            android:textColor="@color/white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvTicketResultStep1DateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-9-18 周日"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <TextView
                android:id="@+id/tvTicketResultStep1StationFromTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="唐山"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
            <TextView
                android:id="@+id/tvTicketResultStep1StationToTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邯郸"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />
            </LinearLayout>
        </LinearLayout>
          <TextView
              android:id="@+id/tvTicket_after"
              android:layout_width="80dp"
              android:layout_height="match_parent"
              android:background="@color/blue"
              android:gravity="center"
              android:text="后一天"
              android:textColor="@color/white"
              />
    </LinearLayout>
    <ListView
        android:id="@+id/lvTicketResultStep1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>



</LinearLayout>